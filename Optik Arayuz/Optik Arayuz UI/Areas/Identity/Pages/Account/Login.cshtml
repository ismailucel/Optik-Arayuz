@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<head>
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

</head>
<form id="account" method="post">
    <div class="LoginContainer">
        <h1>@ViewData["Title"]</h1>
        <h4>Local Hesabınızla Giriş Yapın</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="LoginRow">
            <div class="LoginRowTop">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="LoginRowBottom">
                <label asp-for="Input.Email" class="LoginLabel">Email</label>
                <input asp-for="Input.Email" class="LoginInput" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            </div>
        </div>
        <div class="LoginRow">
            <div class="LoginRowTop">
                <span asp-validation-for="Input.Password" class="text-danger"></span>

            </div>
            <div class="LoginRowBottom">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            </div>
        </div>
        <div style="margin-top:10px;">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <div>
            <button id="login-submit" type="submit" class="LoginButton">Giriş Yap</button>
        </div>
        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div>
    </div>
</form>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

            </div>
            <div class="form-group">
                <label asp-for="FacultyAddress" class="control-label"></label>
                <input asp-for="FacultyAddress" class="form-control" />
                <span asp-validation-for="FacultyAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyMail" class="control-label"></label>
                <input asp-for="FacultyMail" class="form-control" />
                <span asp-validation-for="FacultyMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyPhoneNumber" class="control-label"></label>
                <input asp-for="FacultyPhoneNumber" class="form-control" />
                <span asp-validation-for="FacultyPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

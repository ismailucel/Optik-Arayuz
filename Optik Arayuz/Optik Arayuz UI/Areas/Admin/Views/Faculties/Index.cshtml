@model IEnumerable<Optik_Arayuz_UI.Models.Faculty>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<head>
    <link rel="stylesheet" href="~/css/Table.css" asp-append-version="true" />
</head>

<div class="IContainer">
<h1>Index</h1>

<p>
        <a asp-area="Admin" asp-controller ="Faculties" asp-action="Create">Yeni Fakülte Oluştur</a>

</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacultyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyPhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyPhoneNumber)
            </td>
            <td>
                <a   asp-action="Edit" asp-route-id="@item.FacultyId">Edit</a> |
                <a   asp-action="Details" asp-controller="Faculties" asp-route-id="@item.FacultyId">Details</a> |
                <a   asp-action="Delete" asp-controller="Faculties" asp-route-id="@item.FacultyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
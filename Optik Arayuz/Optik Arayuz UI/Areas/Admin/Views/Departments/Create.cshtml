@model Optik_Arayuz_UI.Models.Department

@{
    ViewData["Title"] = "Create";
}

<head>

    <link rel="stylesheet" href="~/css/FormCard.css">
    <link rel="stylesheet" href="~/css/button.css">
</head>

<div class="Ccontainer">
    <div class="Card">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="Row">
                <label asp-for="DepartmentName" class=""></label>
                <input asp-for="DepartmentName" class="" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="Row">
                <label asp-for="DepartmentAddress" class=""></label>
                <input asp-for="DepartmentAddress" class="" />
                <span asp-validation-for="DepartmentAddress" class="text-danger"></span>
            </div>
            <div class="Row">
                <label asp-for="DepartmentMail" class=""></label>
                <input asp-for="DepartmentMail" class="" />
                <span asp-validation-for="DepartmentMail" class="text-danger"></span>
            </div>
            <div class="Row">
                <label asp-for="DepartmentPhoneNumber" class=""></label>
                <input asp-for="DepartmentPhoneNumber" class="" />
                <span asp-validation-for="DepartmentPhoneNumber" class="text-danger"></span>
            </div>
            <div class="Row">
                <label asp-for="FacultyId" class=""></label>
                <select asp-for="FacultyId" class ="" asp-items="ViewBag.FacultyId"></select>
            </div>
            <div class="buton">
                <input type="submit" value="Oluştur" class="button" />
            </div>
        </form>
    </div>
    <div class="buton">
        <a class="button" asp-action="Index">Listeye Dön</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

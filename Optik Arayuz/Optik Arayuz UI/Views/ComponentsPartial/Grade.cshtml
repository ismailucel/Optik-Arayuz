@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/Components/Grade.css" asp-append-version="true" />

</head>

<div class="grade" style="width: @ViewData["x"]px;">
    @for (var i = 1; i <= Convert.ToInt32(ViewData["Length"]); i++)
    {
        <div class="gradeColumn">
            <div class="label">@i</div>
            <div class="empty">
                <span></span>
                <span></span>
                @if(i==1)
                {
                    <span></span>
                }
            </div>
            <div class="bottom">
                @if (i == 1)
                {
                    <div class="bottomColumn">
                        <div class="circles">0</div>
                        <div class="circles">1</div>
                    </div>
                }
                <div class="bottomColumn">
                    <div class="circles">0</div>
                    <div class="circles">1</div>
                    <div class="circles">2</div>
                    <div class="circles">3</div>
                    <div class="circles">4</div>
                    <div class="circles">5</div>
                    <div class="circles">6</div>
                    <div class="circles">7</div>
                    <div class="circles">8</div>
                    <div class="circles">9</div>
                </div>
                <div class="bottomColumn">
                    <div class="circles">0</div>
                    <div class="circles">1</div>
                    <div class="circles">2</div>
                    <div class="circles">3</div>
                    <div class="circles">4</div>
                    <div class="circles">5</div>
                    <div class="circles">6</div>
                    <div class="circles">7</div>
                    <div class="circles">8</div>
                    <div class="circles">9</div>
                </div>
            </div>

        </div> 
    }
   
</div>

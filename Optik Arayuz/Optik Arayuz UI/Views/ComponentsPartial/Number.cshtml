
<head>
    <link rel="stylesheet" href="~/css/Number.css" asp-append-version="true" />
</head>

<div class="Number" style="width: @ViewData["x"]px;height:@ViewData["y"]px">
    <div class="label">@ViewData["Label"]</div>
    <div class="bottom">
         @for (var i = 0; i < Convert.ToInt32(ViewData["Length"]); i++){
            <div class="column">
                <div class="empty"></div>
                <div class="circles">0</div>
                <div class="circles">1</div>
                <div class="circles">2</div>
                <div class="circles">3</div>
                <div class="circles">4</div>
                <div class="circles">5</div>
                <div class="circles">6</div>
                <div class="circles">7</div>
                <div class="circles">8</div>
                <div class="circles">9</div>
            </div>
         }
    </div>
</div>

﻿@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Localization
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Optik Arayüz</title>

    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
    <header>
        <nav class="Nav">
            <div class="NavLeft">
                <div class="NavLeftItem">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="width:30px; height:30px;" src=@Url.Content("~/SauLogo.png") /></a>
                </div>

                <div class="NavLeftItem">
                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </div>
                <div class="NavLeftItem">
                    <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
                <div class="NavLeftItem">
                    <a class="" asp-area="" asp-controller="Exams" asp-action="Index">Sınavlar</a>
                </div>
                <div class="NavLeftItem">
                    <a class=""asp-area="" asp-controller="ExamPapers" asp-action="Index">Sınav Kağıtları</a>
                </div>
                @if (User.IsInRole("Admin"))
                    {
                        <div class="NavLeftItem">
                             <a asp-area="Admin" asp-controller="Faculties" asp-action="Index">Fakülteler</a>
                        </div>
                        <div class="NavLeftItem">
                            <a asp-area="Admin" asp-controller="Departments" asp-action="Index">Bölümler</a>
                        </div>
                    }                          
            </div>
            <div class="NavRight">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="NavRightItem">
                            <a asp-controller="Home" asp-action="Index">Merhaba @User.Identity.Name!</a>
                    </div>
                    <div class="NavRightItem">
                        <form class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="">Çıkış</button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="NavRightItem">
                        <a class="" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-user"></i>Giriş</a>
                    </div>
                    <div class="NavRightItem">
                        <a class="" asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-bell"></i>Kayıt Ol</a>
                    </div>
                }
            </div>
        </nav>
    </header>
    }
    <div class="mid">
            @RenderBody()
    </div>

    <footer>
        <div class="FooterMain">
            Burası Footer Kısmı
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
